<div>
    <center>
        <div class="col-md-9" style="background-color:#e8e8e8; height: 780px;">

            <form method="Post">
                <div class="col-md-10">
                    <br /><br />
                    Massa:  <input type="text" placeholder="(em g)" class="col-2" name="massa"> &nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp
                    Calor:  <input type="text" placeholder="(em cal/g°C)" class="col-2" name="calor"> &nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp
                    Temperatura:  <input type="text" placeholder="(em °C)" class="col-2" name="temperatura">
                    <br /><br /><br />
                    <button type="submit" class="btn btn-secondary" style="float: none;" onclick="calorometria()" asp-action="calorometria">CALCULAR</button>
                    <br /><br /><br /><br />
                    <label for="exampleFormControlTextarea1"> Resultado:</label>
                    <textarea class="form-control" id="exampleFormControlTextarea1" rows="12" style="width:80%" readonly> @ViewBag.resultado</textarea>
                </div>
            </form>
        </div>
    </center>
</div>