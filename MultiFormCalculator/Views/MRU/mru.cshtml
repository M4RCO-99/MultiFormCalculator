<div>
    <center>
        <div class="col-md-9" style="background-color:#e8e8e8; height: 780px;">

            <form method="Post">
                <div class="col-md-10">
                    <br /><br />
                    Espaço Inicial:  <input type="text" placeholder="(em km)" class="col-2" name="espacoInicial">&nbsp
                    Velocidade:  <input type="text" placeholder="(em km/h)" class="col-2" name="velocidade">&nbsp
                    Tempo:  <input type="text" placeholder="(em h)" class="col-2" name="tempo">
                    <br /><br /><br />
                    <button type="submit" class="btn btn-secondary" style="float: none;" onclick="mru()" asp-action="mru">CALCULAR</button>
                    <br /><br /><br /><br />
                    <label for="exampleFormControlTextarea1"> Resultado:</label>
                    <textarea class="form-control" id="exampleFormControlTextarea1" rows="12" style="width:80%" readonly> @ViewBag.resultado</textarea>
                </div>
            </form>
        </div>
    </center>
</div>